{
  "name": "code-to-prompt",
  "version": "0.1.0",
  "description": "A sample CLI tool built with Node.js and TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "code-to-prompt": "dist/index.js"
  },
  "scripts": {
